# Environment variables for production deployment
# Copy this file to .env and configure for your production environment

# Production domain (without protocol)
FIDO2_SERVER_DOMAIN=lifeos.frostaura.net

# Production origins (with protocol - use https:// in production)
# Primary origin (frontend)
FIDO2_ORIGIN=https://lifeos.frostaura.net

# Additional origins (if API is on different URLs, otherwise use same as primary)
FIDO2_ORIGIN_1=https://lifeos.frostaura.net
FIDO2_ORIGIN_2=https://lifeos.frostaura.net

# CORS allowed origins for production
CORS_ORIGIN_0=https://lifeos.frostaura.net
CORS_ORIGIN_1=https://lifeos.frostaura.net

# For local development, use these instead:
# FIDO2_SERVER_DOMAIN=localhost
# FIDO2_ORIGIN=http://localhost:5173
# FIDO2_ORIGIN_1=http://localhost:5001
# FIDO2_ORIGIN_2=http://localhost:5000
# CORS_ORIGIN_0=http://localhost:5173
# CORS_ORIGIN_1=http://localhost:3000
